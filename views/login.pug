extends layout

block content


  .row.justify-content-center
    .col-lg-6
      form(action="/login" method="post")

        .form-floating.mb-3
          input#email.form-control(type='email' name="email" aria-describedby='emailHelp' placeholder='name@example.com')
          label(for='email') Email address

        .form-floating
          input#password.form-control(type='password' name="password" placeholder='Password')
          label(for='password') Password

        span.d-inline-block Already have an account?
        a(href="/register") Register

        button.btn.btn-primary.mt-3.d-block(type='submit') Submit
