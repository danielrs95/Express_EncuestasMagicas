extends layout

block content

  .row.justify-content-center
    .col-8
      .card
        .card-body
          h5.card-title #{poll.question}
          h6.card-subtitle.mb-2.text-muted #{poll.user.name}
          p #{poll.description}

      .card.mt-3
        .card-body
          each option,i in poll.options
            div.mb-2
              span #{option.text} - Votes: #{option.votes}
              .progress
                .progress-bar(role='progressbar' style=`width: ${poll.optionPercentage(i)}%;` aria-valuenow='25' aria-valuemin='0' aria-valuemax='100') #{poll.optionPercentage(i)}%
